{
  "name": "Sutra",
  "version": "1.0.0",
  "description": "Efficiently absorb vast knowledge",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "browser-polyfill.js",
        "injected-content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "browser_action": {
    "default_title": "Sutra",
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "128": "images/icon128.png"
  },
  "manifest_version": 2
}
