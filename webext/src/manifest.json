{
  "name": "Sutra",
  "version": "1.0.2",
  "description": "Efficiently absorb vast knowledge",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "commands": {
    "activate-sutra": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Activate Sutra"
    }
  },
  "browser_action": {
    "default_title": "Sutra",
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "128": "images/icon128.png"
  },
  "manifest_version": 2
}
